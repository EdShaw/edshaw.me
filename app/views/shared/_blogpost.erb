        <h2><%=blog.title%></h2>
        <p><%= link_to raw("23rd October, 2013 <span class='glyphicon glyphicon-link'></span>"), blog_id_url(id: blog.id) %></p>
    </header>
    <div class ="blogcontent">
        <p><%=markdown(blog.post)%></p>
    </div>
    <footer>
        <p>~ Ed Shaw</p>
    </footer>
</article>
